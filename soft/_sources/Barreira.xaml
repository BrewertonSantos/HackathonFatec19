             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:soft._sources"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="500" BorderThickness="1,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
