                    <Label Content="Salvar" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" FontFamily="Verdana"/>
                </Border>
                <Label Content="Tensão:" HorizontalAlignment="Left" Margin="34,168,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top"/>
                <TextBox Margin="34,192,394,0" TextWrapping="Wrap" FontSize="16" FontFamily="Verdana" BorderBrush="Black" BorderThickness="0,0,0,1" Height="23" VerticalAlignment="Top" MaxLength="15"/>
                <Label Content="Potência:" HorizontalAlignment="Left" Margin="189,172,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top"/>
                <Label Content="V" HorizontalAlignment="Left" Margin="106,191,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top" Width="17" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Margin="192,196,244,0" TextWrapping="Wrap" FontSize="16" FontFamily="Verdana" BorderBrush="Black" BorderThickness="0,0,0,1" Height="23" VerticalAlignment="Top" MaxLength="15"/>
                <Label Content="mW" HorizontalAlignment="Left" Margin="256,195,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top" Width="43" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Content="Corrente:" HorizontalAlignment="Left" Margin="356,168,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top"/>
                <TextBox Margin="359,192,77,0" TextWrapping="Wrap" FontSize="16" FontFamily="Verdana" BorderBrush="Black" BorderThickness="0,0,0,1" Height="23" VerticalAlignment="Top" MaxLength="15"/>
                <Label Content="mA" HorizontalAlignment="Left" Margin="423,191,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top" Width="43" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Content="Capacitância:" HorizontalAlignment="Left" Margin="37,232,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top"/>
                <TextBox Margin="40,256,396,0" TextWrapping="Wrap" FontSize="16" FontFamily="Verdana" BorderBrush="Black" BorderThickness="0,0,0,1" Height="23" VerticalAlignment="Top" MaxLength="15"/>
                <Label Content="nF" HorizontalAlignment="Left" Margin="104,255,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top" Width="43" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Content="Indutância:" HorizontalAlignment="Left" Margin="189,232,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top"/>
                <TextBox Margin="192,256,244,0" TextWrapping="Wrap" FontSize="16" FontFamily="Verdana" BorderBrush="Black" BorderThickness="0,0,0,1" Height="23" VerticalAlignment="Top" MaxLength="15"/>
                <Label Content="mH" HorizontalAlignment="Left" Margin="256,255,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top" Width="43" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Content="Proteção:" HorizontalAlignment="Left" Margin="356,236,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top"/>
                <TextBox Margin="356,260,34,0" TextWrapping="Wrap" FontSize="16" FontFamily="Verdana" BorderBrush="Black" BorderThickness="0,0,0,1" Height="23" VerticalAlignment="Top" MaxLength="15"/>
                <Label Content="Ex Device:" HorizontalAlignment="Left" Margin="40,296,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top"/>
                <TextBox Margin="40,320,350,0" TextWrapping="Wrap" FontSize="16" FontFamily="Verdana" BorderBrush="Black" BorderThickness="0,0,0,1" Height="23" VerticalAlignment="Top" MaxLength="15"/>
                <Label Content="Ex Group:" HorizontalAlignment="Left" Margin="189,301,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top"/>
                <TextBox Margin="189,325,201,0" TextWrapping="Wrap" FontSize="16" FontFamily="Verdana" BorderBrush="Black" BorderThickness="0,0,0,1" Height="23" VerticalAlignment="Top" MaxLength="15"/>
                <Label Content="Ex Temp:" HorizontalAlignment="Left" Margin="356,301,0,0" FontSize="18" FontWeight="Bold" Padding="0" Height="24" VerticalAlignment="Top"/>
                <TextBox Margin="356,325,34,0" TextWrapping="Wrap" FontSize="16" FontFamily="Verdana" BorderBrush="Black" BorderThickness="0,0,0,1" Height="23" VerticalAlignment="Top" MaxLength="15"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
